<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:GoalTrackerMVVM.ViewModels"
             x:Class="GoalTrackerMVVM.Views.MainPage"
             x:Name="MainPageRoot"
             Title="Goals">
    <Grid RowDefinitions="Auto,*" Padding="12" RowSpacing="12">
        <!-- Header with New Goal button -->
        <Button Grid.Row="0"
                Text="+ New Goal"
                HorizontalOptions="End"
                Command="{Binding GoToAddCommand}" />

        <!-- Goals List with RefreshView -->
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshGoalsCommand}">
            <CollectionView ItemsSource="{Binding Goals}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="8,6" Padding="12"
                                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2B2B2B}"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#3A3A3A}"
                                StrokeThickness="1">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12" />
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=GoToDetailsCommand}"
                                    CommandParameter="{Binding .}" />
                            </Border.GestureRecognizers>
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                <!-- Goal Name -->
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding Name}" 
                                       FontAttributes="Bold" 
                                       FontSize="18" />
                                
                                <!-- Delete Button -->
                                <Button Grid.Row="0" Grid.Column="1" 
                                        Grid.RowSpan="2"
                                        Text="ðŸ—‘ï¸" 
                                        FontSize="18"
                                        BackgroundColor="Transparent"
                                        TextColor="Red"
                                        VerticalOptions="Center"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=DeleteGoalCommand}"
                                        CommandParameter="{Binding .}" />
                                
                                <!-- Motivation -->
                                <Label Grid.Row="1" Grid.Column="0"
                                       Text="{Binding Motivation}" 
                                       FontSize="12" 
                                       TextColor="Gray"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="2" />
                                
                                <!-- Target Date -->
                                <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="{Binding TargetDate, StringFormat='Target: {0}'}" 
                                       FontSize="12" 
                                       Margin="0,4,0,2" />
                                
                                <!-- Progress Bar -->
                                <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                      ColumnDefinitions="*,Auto">
                                    <ProgressBar Grid.Column="0"
                                                 Progress="{Binding Progress}"
                                                 HeightRequest="8"
                                                 VerticalOptions="Center"
                                                 Margin="0,0,10,0" />
                                    <Label Grid.Column="1"
                                           Text="{Binding Progress, StringFormat='{0:P0}'}"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           VerticalTextAlignment="Center" />
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
