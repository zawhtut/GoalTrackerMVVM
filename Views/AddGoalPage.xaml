<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoalTrackerMVVM.Views.AddGoalPage"
             Title="Add New Goal">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Create Your Goal" FontSize="24" FontAttributes="Bold" />
            
            <Label Text="Goal Name" FontSize="16" />
            <Entry Placeholder="Enter goal name" Text="{Binding Name}" />
            
            <Label Text="Motivation" FontSize="16" />
            <Editor Placeholder="What motivates you?" Text="{Binding Motivation}" HeightRequest="100" />
            
            <Label Text="Steps to Achieve" FontSize="16" />
            <Editor Placeholder="List your steps..." Text="{Binding Steps}" HeightRequest="100" />
            
            <Label Text="Target Date" FontSize="16" />
            <DatePicker Date="{Binding TargetDate}" />
            
            <Button Text="Save Goal" 
                    Command="{Binding SubmitNewGoalCommand}"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    Margin="0,20,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
